pipeline {

    agent any
    stages{
        stage('Build') {
            steps {
		sh 'rm -rf *'
                sh 'git clone https://github.com/gitofakash/Dotnet.git'
		dir('Dotnet'){
                sh 'sudo docker build -t aspnetapp .'
		BUILD_FULL = sh ( script: "docker container ls -a| grep 'myapp'", returnStatus: true) == 0
                echo "Build full flag: ${BUILD_FULL}"
		}
            }
        }
	  stage('Deploy') {
            steps {
                dir('Dotnet'){
                sh 'sudo docker run -d -p 8081:80 --name myapp aspnetapp'
            }
        }
	}
    }
}
