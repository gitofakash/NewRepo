pipeline {

    agent any
    stages{
        stage('Build') {
            steps {
		sh 'rm -rf *'
                sh 'git clone https://github.com/gitofakash/Dotnet.git'
		dir('Dotnet'){
                sh 'sudo docker build -t aspnetapp .'
		}
            }
        }
	  stage('Deploy') {
            steps {
                dir('Dotnet'){
                sh 'sudo docker run -d -p 8081:80 --name myapp aspnetapp'
            }
        }
	}
    }
}
